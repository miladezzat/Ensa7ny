<div class="row">
  <div class="col s12">
    <form class="col s12 m12 l8 offset-l2 z-depth-5" id="register" action="/users/update/{{user._id}}" method="post">
    <p class="center"> <i class="material-icons  large">recent_actors</i></p>
    <h1 class="center">Update</h1>
    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">account_circle</i>
        <input id="fullname" class="validate" type="text" name="fullname" value="{{user.fullname}}" required>
        <label for="fullname">Full Name</label>
      </div>
      <div class="input-field col s12">
        <i class="material-icons prefix">phone</i>
        <input id="icon_telephone" type="tel" class="validate" name="tel" value="{{user.phone}}"  required>
        <label for="icon_telephone">Telephone</label>
      </div>

      <div class="input-field col s12">
        <i class="material-icons prefix">email</i>
        <input id="email" class="validate" type="email" name="email" value="{{user.email}}"  required>
        <label for="email"> Email </label>
      </div>

      <div class="input-field col s12">
        <i class="material-icons prefix">edit</i>
        <input id="age" class="validate" type="number" name="age" value="{{user.age}}"  required>
        <label for="age"> Age </label>
      </div>
      <input type="hidden" name="_csrf" value="{{csrfToken}}">
    </div>
    <button class="btn waves-effect waves-light purple darken-3" type="submit" name="action">Save
      <i class="material-icons right">send</i>
    </button> <a href="/users/login"> or Login if you have an  account</a>
  </form>
  </div>
</div>
