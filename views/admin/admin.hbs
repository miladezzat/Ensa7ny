<div class="row">
  <div class="col s12 m8 offset-m2 center">
    <img id="userImage" class="responsive-img z-depth-5  circle" src="/images/user.jpg" alt="User">
    <h2>{{username}}</h2>
  </div>
  <div class="col s12">
    <h1 class="center">Users</h1>
    <table class="highlight centered" id="users">
      <thead>
        <tr>
            <th>Full Name</th>
            <th>Emial</th>
            <th>Age</th>
            <th>Phone</th>
            <th></th>
        </tr>
      </thead>

      <tbody>
        {{#if users}}
        {{#each users}}
        <tr>
          <td>{{this.fullname}}</td>
          <td>{{this.email}}</td>
          <td>{{this.age}}</td>
          <td>{{this.phone}}</td>
          <td>
            <a class="waves-effect waves-light btn" href="/users/update/{{this._id}}"> <i class="large material-icons"> mode_edit</i></a>
            <a class="waves-effect waves-light btn" href="/users/delete/{{this._id}}"> <i class="large material-icons"> delete</i></a>
          </td>
        </tr>
        {{/each}}
        {{/if}}
      </tbody>
    </table>
  </div>
  <h2 class="center">Messages</h2>
  {{#each messages}}
  <div class="col s12 m8 offset-m2">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <p>{{this.text}}</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
