<div class="row">
  <div class="col s12 m8 offset-m2 center">
    {{# if gender}}
      {{# if userImage}}
      <img id="userImage" class="responsive-img z-depth-5  circle animated zoomInDown" src="{{userImage}}" alt="User">
      {{else}}
      <img id="userImage" class="responsive-img z-depth-5  circle animated zoomInDown" src="/images/user.jpg" alt="User">
      {{/if}}
    {{else}}
      {{# if userImage}}
      <img id="userImage" class="responsive-img z-depth-5  circle animated zoomInDown" src="{{userImage}}" alt="User">
      {{else}}
      <img id="userImage" class="responsive-img z-depth-5  circle animated zoomInDown" src="/images/user.svg" alt="User">
      {{/if}}
    {{/if}}
    <h2 class="animated zoomInLeft">{{username}}</h2>
    <a class="waves-effect waves-light btn animated zoomInRight" href="/message/{{id}}"> <i class="large material-icons right"> send</i> your Link</a> <br> <br><br>
    <div class="fb-share-button animated zoomIn" data-href="https://ensa7ny.herokuapp.com/message/{{id}}" data-layout="button_count" data-size="small" data-mobile-iframe="true">
      <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https://ensa7ny.herokuapp.com/message/{{id}}" class="fb-xfbml-parse-ignore"> مشاركة صفحتك
      </a>
    </div>
  </div>
  <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
  <h3 class="center animated slideInDown">Messages</h3>
  {{#each messages}}
  <div class="col s12 m8 offset-m2">
    <div class="card blue-grey darken-1 animated fadeIn">
      <div class="card-content white-text">
        <p class="animated zoomInLeft">
          {{this.text}}
          <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https://ensa7ny.herokuapp.com/{{this._id}}" class="fb-xfbml-parse-ignore right">  مشاركة الرسالة
          </a>
          <a class="waves-effect waves-light btn right" href="/users/deletmessage/{{this._id}}"> <i class="large material-icons"> clear</i></a>
        </p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
