<style>
       #map {
        height: 400px;
        width: 100%;
       }
</style>

<div class="row">
  <div class="col s12 m8 offset-m2 center">
    {{# if gender}}
    <img id="userImage" class="responsive-img z-depth-5  circle" src="/images/user.jpg" alt="User">
    {{else}}
    <img id="userImage" class="responsive-img z-depth-5  circle" src="/images/user.svg" alt="User">
    {{/if}}
    <h2>{{username}}</h2>
    <a class="waves-effect waves-light btn" href="/message/{{id}}"> <i class="large material-icons right"> mode_edit</i> you Link</a>
  </div>
  <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
  <h3 class="center">Messages</h3>
  {{#each messages}}
  <div class="col s12 m8 offset-m2">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <p>{{this.text}}</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
