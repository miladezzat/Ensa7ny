<div class="row">
  {{# if hasError}}
    <div class="col s12 m12 l8 offset-l2">
      <div class="card red lighten-2">
        <div class="card-content white-text">
          {{# each messages}}
            <p>{{this}}</p>
          {{/each}}
        </div>
      </div>
    </div>
  {{/if}}
  <div class="col s12">
    <form class="col s12 m8 offset-m2 z-depth-5" id="login" action="/users/login" method="post">
      <p class="center"> <i class="material-icons large animated zoomInDown ">supervisor_account</i></p>

      <h1 class="center animated zoomIn">دخول</h1>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">email</i>
          <input id="email" class="validate" type="text" name="email" required>
          <label for="email">Email</label>
        </div>
        <div class="input-field col s12">
          <i class="material-icons prefix">visibility_off</i>
          <input id="password" class="validate" type="password" name="password" required>
          <label for="password">  Password </label>
        </div>
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
      </div>
      <button class="btn waves-effect waves-light teal darken-3 right" type="submit" name="action">Login
        <i class="material-icons right">send</i>
      </button><br> <br> <a href="/users/register">Register if you have not an  account</a> <br> <br>
      <a href="/users/email"> Forget password</a>
    </form>
  </div>
</div>
